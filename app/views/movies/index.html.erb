
<h1>Movies#index</h1>

<h2>Welcome <%= current_user.first_name %> 
<%= button_to 'Log out', destroy_user_session_path, method: :delete %>

<%= link_to 'Create a new move', new_movie_path %>
<br>

     <ul class="row">

           <!-- <div class="row">
           <div class="col s4"> -->
       <% @movies.each do |movie| %>

       <li class="col s4">
          <div class="card">
           <div class="card-image">
             <iframe src="https://www.youtube.com/watch?v=KuMXBiO1kbs" frameborder="0" allowfullscreen></iframe>

              <span class="card-title text-grey darken-3"><%= link_to movie.title, movie_path(movie) %></span>
              </div>

            <div class="card-content">
              <!-- put descripion here -->

              <div class="card-action"><%= link_to 'edit', edit_movie_path(movie) %>
                 <%= link_to 'delete', movie_path(movie), method: :delete%>
              </div>

            </div>
        <% end %>
        </div>
        </li>
    </ul>
