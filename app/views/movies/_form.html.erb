

<%= form_for @movie do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field  :title, required: true, autofocus: true %>
  <br>
  <%= f.label :duration %>
  <%= f.text_field  :duration, required: true, autofocus: true %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field  :genre, required: true, autofocus: true %>
  <br>
  <%= f.label :description %>
  <%= f.text_field  :description, required: true, autofocus: true %>
  <br>
  <%= f.label 'trailer url:' %>
  <%= f.text_field  :trailer, required: true, autofocus: true %>
  <br />
  <br>
  <%= f.submit %>
<% end %>